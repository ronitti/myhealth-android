<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.RoundedCornerMaterialButtonBorder" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_btn_outline_blue</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButtonGrayBorder" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_btn_outline_gray</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AppTheme.EditTextWithBorder" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_border_shape</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AppTheme.IndicatorSelected">
        <item name="android:background">@drawable/indicator_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.IndicatorUnSelected">
        <item name="android:background">@drawable/indicator_unselected</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
