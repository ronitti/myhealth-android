<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="4dp">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#74BBFF"/>
            <solid
                android:color="@color/transparent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
        </shape>
    </item>
    <item android:top="8dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#007FFF"/>
            <solid
                android:color="@color/transparent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <padding
                android:left="14dp"
                android:top="14dp"
                android:right="14dp"
                android:bottom="14dp" />
        </shape>
    </item>
</layer-list>