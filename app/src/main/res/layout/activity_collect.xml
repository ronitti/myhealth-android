<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CollectActivity">

    <TextView
        android:id="@+id/collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Collect"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/collect_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="50dp">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/collect_frame"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/collect_btn_save"
            android:layout_width="@dimen/width_btn_lg"
            android:layout_height="@dimen/height_btn_md"
            android:gravity="center"
            android:text="Save"
            style="@style/AppTheme.RoundedCornerMaterialButton"/>

    </LinearLayout>




</RelativeLayout>