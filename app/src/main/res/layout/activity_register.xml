<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    tools:context=".ui.RegisterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/gap_between_fields"
            android:background="@drawable/line_stepview"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step0"
                style="@style/AppTheme.IndicatorSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/margin_of_indicators"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/step1"
                style="@style/AppTheme.IndicatorUnSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/margin_of_indicators"
                android:gravity="center"
                android:text="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/step2"
                style="@style/AppTheme.IndicatorUnSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/margin_of_indicators"
                android:gravity="center"
                android:text="3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/step3"
                style="@style/AppTheme.IndicatorUnSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/margin_of_indicators"
                android:gravity="center"
                android:text="4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/step4"
                style="@style/AppTheme.IndicatorUnSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_between_fields"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/gap_between_fields"
            android:layout_marginBottom="@dimen/margin_bottom_pager">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top_nav_buttons"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_back"
                style="@style/AppTheme.RoundedCornerMaterialButtonBorder"
                android:layout_width="@dimen/width_btn_md"
                android:layout_height="@dimen/height_btn_sm"
                android:layout_marginEnd="@dimen/gap_between_fields"
                android:layout_gravity="center"
                android:text="@string/activity_btn_back" />

            <Button
                android:id="@+id/action_next"
                style="@style/AppTheme.RoundedCornerMaterialButtonBorder"
                android:layout_width="@dimen/width_btn_md"
                android:layout_height="@dimen/height_btn_sm"
                android:layout_gravity="center"
                android:text="@string/activity_btn_next" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>