<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.RegisterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:paddingLeft="40dp"
            android:paddingEnd="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/line_stepview"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/step0"
                    style="@style/AppTheme.IndicatorSelected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_of_indicators"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/step1"
                    style="@style/AppTheme.IndicatorUnSelected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_of_indicators"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/step2"
                    style="@style/AppTheme.IndicatorUnSelected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_of_indicators"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/step3"
                    style="@style/AppTheme.IndicatorUnSelected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_of_indicators"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/step4"
                    style="@style/AppTheme.IndicatorUnSelected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="18sp" />


            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/lbl_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="20dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">

        </android.support.v4.view.ViewPager>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="-80dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="40dp"
            android:paddingLeft="16dp"
            android:paddingEnd="40dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/action_back"
                style="@style/AppTheme.RoundedCornerMaterialButtonGrayBorder"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="@string/activity_btn_back" />

            <Button
                android:id="@+id/action_next"
                style="@style/AppTheme.RoundedCornerMaterialButtonGrayBorder"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:text="@string/activity_btn_next" />


        </FrameLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>